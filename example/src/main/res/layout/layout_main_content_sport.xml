<?xml version="1.0" encoding="utf-8"?>
<!-- 我的心率趋势 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_sport"
    android:layout_width="match_parent"
    android:layout_height="190dip"
    android:background="@color/bg2_white" >

    <ImageView
        android:id="@+id/img_detail"
        android:layout_width="15dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dip"
        android:src="@drawable/jt1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_detail"
        android:orientation="vertical"
        android:paddingLeft="12dip"
        android:paddingRight="8dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/yd_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dip"
                    android:src="@drawable/yundongicon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_sport_analysis"
                        android:textColor="@color/font1_blak"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_sport_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1天前"
                        android:textSize="12sp"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sport_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="3dip"
                android:layout_marginTop="6dip"
                android:drawableLeft="@drawable/good"
                android:drawablePadding="3dip"
                android:text="健康状况良好"
                android:textColor="@color/font7_green"
                android:textSize="14sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_sport"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="8dip"
            android:visibility="invisible" >

            <LinearLayout
                android:id="@+id/layout_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dip" >

                <TextView
                    android:id="@+id/tv_sport_step_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21000"
                    android:textColor="@color/font1_blak"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="步"
                    android:textColor="@color/font2_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_sport_step_calorie_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34234"
                    android:textColor="@color/font1_blak"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总消耗卡路里"
                    android:textColor="@color/font2_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_sport_step_calorie_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:text="23333"
                    android:textColor="@color/font1_blak"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动消耗卡路里"
                    android:textColor="@color/font2_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sport_progress"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="75%"
                android:textColor="@color/font3_sky_blue"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sport_prompt_connection"
        android:layout_width="fill_parent"
        android:layout_height="180dip"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="请连接智能头戴"
        android:textColor="@color/font5_light_gray"
        android:textSize="15sp"
        android:textStyle="bold"/>

</RelativeLayout>